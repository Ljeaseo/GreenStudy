<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.wow.mapper.BoardMapper">
	<insert id="write">
		insert into exboard(title, content, id)  
		values(#{title},#{content},#{id})
	</insert>
	
	<select id="list" resultType="org.wow.model.BoardVo">
		select * 
		from exboard;
	</select>  	
	<select id="detail" resultType="org.wow.model.BoardVo">
		select * 
		from exboard 
		where bno = #{bno}
	</select>
	
	<update id="modify">
		update exboard 
		set title=#{title}, 
			content=#{content} 
		where bno= #{bno}
	</update>
	
	<delete id="remove">
		delete 
		from exboard 
		where bno=#{bno}
	</delete>
</mapper>
  
		